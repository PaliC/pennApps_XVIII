extends layout

block content
    if errMsg 
        p.errMsg= errMsg
    if provider
          #headerwrap
            .row.centered
            center
                main.container
                    .jumbotron
                        .content
                            h2
                                |   DOCTOR REG.
                            .center
                        form.form-inline(action='/signup/provider', method='post')
                            div.form-group
                                input.form-control(type='text', name='username', placeholder='username')
                                input.form-control(type='email', name='email', placeholder='email')
                                input.form-control(type='password', name='password', placeholder='password')
                                input.form-control(type='text', name='npi', placeholder='National Provider Identifier')
                                input.btn.btn-success.btn-default(type='submit')
    else
        #headerwrap
            .row.centered
            center
                main.container
                    .jumbotron
                        .content
                            h2 
                                | PATIENT REG.
                            .center 
                        form.form-inline(action='/signup/patient', method='post')
                            div.form-group
                                input.form-control(type='text', name='username', placeholder='username')
                                input.form-control(type='email', name='email', placeholder='email')
                                input.form-control(type='password', name='password', placeholder='password')
                                input.btn.btn-success.btn-default(type='submit')